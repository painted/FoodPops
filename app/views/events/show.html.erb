<%= @event.title %><br>
<div class="pure-g">
	<div class="u-1 u-med-1-2 u-lrg-1-3">
		<%= image_tag @event.image.url(:thirtythree), class: 'uploaded-pic' %>
		<aside class="photo-box-caption">			
			<p>
				<%= star_rating @event.average_rating %> (<%= @event.reviews.count %>) 
			</p>
		</aside>
	</div>
	<div class="u-1 u-med-1-2 u-lrg-2-3">
		<p>
			<%= @event.description %> 
		</p>
		<p>
			<%= @event.address %> - <%= @event.city %> - <%= @event.postcode %>
		</p>
		<p>
			<%= @event.start_date %> to <%= @event.end_date %> 
		</p>
		<p>
			posted by <%= @event.foody.username %>.
		</p>
		<p>
			<% @event.reviews.each do |review| %>
				<li><%= review.thoughts %> (<%= star_rating review.rating %>)</li>
				<li>Review by <%= review.foody.username %></li>
			<% end %>
		</p>
		<p>
			<%= link_to "Write a review", new_event_review_path(@event) %>
		</p>
	</div>
</div>	
<div id="map-individual" data-id="<%= @event.id %>"></div>