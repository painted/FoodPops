<% if @events.any? %>
<div class="pure-g">
	<% @events.each do |event| %>
	<div class="photo-box u-1 u-med-1-2 u-lrg-1-3">
		<a href="/">
			<%= image_tag event.image.url, class: 'uploaded-pic' %>
		</a>
		<aside class="photo-box-caption">			
			<p>
				<%= event.title %> - <%= event.description %> 
			</p>
			<p>
				<%= event.address %> - <%= event.city %> - <%= event.postcode %>
			</p>
			<p>
				posted by <%= event.foody.username %>.
			</p>
			<p>
				goes from <%= event.start_date %> to <%= event.end_date %> 
			</p>
		</aside>
	</div>
	<% end %>
</div>
<% else %>
<%= link_to 'No Events Yet Please Help', new_event_path, id: "", class: "" %>
<% end %>
<div class="photo-box u-1 u-med-1-1 u-lrg-1-1" id="map"></div>
<%= link_to 'Create event', new_event_path, id: "", class: "" %>