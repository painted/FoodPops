<%= form_for @event do |f| %>

	<%= f.label :title %><br>
	<%= f.text_field :title %><br>

	<%= f.label :description %><br>
	<%= f.text_area :description %><br>

	<%= f.label :address %><br>
	<%= f.text_field :address %><br>

	<%= f.label :city %><br>
	<%= f.text_field :city %><br>

	<%= f.label :postcode %><br>
	<%= f.text_field :postcode %><br>

	<%= f.label :start_date %><br>
	<%= f.datetime_select :start_date %><br>

	<%= f.label :end_date %><br>
	<%= f.datetime_select :end_date %><br>

	<%= f.submit 'Submit' %>

<% end %>
